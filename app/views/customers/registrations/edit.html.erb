<%= render "public/header" %>
<div class="container">
  <h3>会員情報編集</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="field">
      <p>名前&emsp;&emsp;&emsp;&emsp;&emsp;
        <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name" %>
        <%= f.text_field :first_name, autocomplete: "given-name" %>
      </p>
    </div>

    <div class="field">
      <p>フリガナ&emsp;&emsp;&emsp;
        <%= f.text_field :last_name_kana, autocomplete: "family-name" %>
        <%= f.text_field :first_name_kana, autocomplete: "given-name" %>
      </p>
    </div>

    <div class="field">
      <P>郵便番号&emsp;&emsp;&emsp;
        <%= f.text_field :postal_code, autocomplete: "postal-code" %>
      </P>
    </div>
    <div class="field">
      <p>住所&emsp;&emsp;&emsp;&emsp;&emsp;
        <%= f.text_field :address, autocomplete: "street-address" %>
      </p>
    </div>
    <div class="field">
      <p>電話番号&emsp;&emsp;&emsp;
        <%= f.text_field :telephone_number, autocomplete: "tel" %>
      </p>
    </div>
    <div class="field">
      <p>メールアドレス
        <%= f.email_field :email, autocomplete: "email" %>
      </p>
    </div>
    <div class="actions">
      <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    </div>
  <% end %>

  <%= link_to "退会する", "#", class:"btn btn-danger" %>

</div>