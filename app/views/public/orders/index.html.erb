<%= render "public/header" %>
<div class="container">
  <h3>注文履歴</h3>

  <table class="table">
    <thread>
      <tr>
        <td>注文日</td>
        <td>配送先</td>
        <td>注文商品</td>
        <td>支払金額</td>
        <td>ステータス</td>
        <td>注文詳細</td>
      </tr>
    </thread>
    <% @orders.each do |order| %>
    <tbody>
      <td><%= order.updated_at.strftime("%Y-%m-%d") %></td>
      <td>
        <%= order.postal_code %></br>
        <%= order.address %></br>
        <%= order.name %>
      </td>
      <td>
        <% order.order_details.each do |order_detail| %>
          <ul style="list-style:none">
            <li><%= order_detail.item.name %></li>
          </ul>
        <% end %>
      </td>
      <td><%= order.total_payment.floor.to_s(:delimited) %>円</td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order.id), class:"btn btn-primary" %></td>
    </tbody>
    <% end %>
  </table>

</div>