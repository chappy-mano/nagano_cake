<%= render "public/header" %>

<div class="container">
  <h3>商品一覧</h3>
  <div class="wrapper grid">
    <% @items.each do |item| %>
    <div class="item">
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, size:"250x150", format:'jpeg' %>
      <% end %>
      <p><%= item.name %></p>
      <p><%= number_to_currency(@tax_price, unit:"", precision:0) %>円</p>
    </div>
    <% end %>
  </div>

</div>