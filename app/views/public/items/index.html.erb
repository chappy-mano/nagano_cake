<%= render "public/header" %>

<div class="container">
  <h3>商品一覧(<%= @items.ids.count %>件)</h3>
  <div class="wrapper grid">
    <% @items.each do |item| %>
    <div class="item">
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, size:"250x150", format:'jpeg' %>
      <% end %>
      <p><%= item.name %></p>
      <p><%= (item.price*1.1).floor.to_s(:delimited) %>円(税込)</p>
    </div>
    <% end %>
  </div>

</div>