<div class="container">
  <h3>会員一覧</h3>
  <table class="table">
    <thread>
      <tr>
        <td>会員ID</td>
        <td>氏名</td>
        <td>メールアドレス</td>
        <td>ステータス</td>
      </tr>
    </thread>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id%></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %> <%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><%= customer.is_deleted %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>